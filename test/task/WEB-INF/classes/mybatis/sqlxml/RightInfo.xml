<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="RightInfo">
	<resultMap type="com.maien.system.manager.right.model.RightInfo"
		id="RightInfoResult">
		<result column="ID" jdbcType="INTEGER" property="id" />
		<result column="USERID" jdbcType="VARCHAR" property="userId" />
		<result column="MENUID" jdbcType="INTEGER" property="menuId" />
	</resultMap>


	<select id="queryRightByUserID" resultMap="RightInfoResult">
		SELECT * FROM tbl_manage_right_info t
		<where>
			<if test="userId and userId">
				AND t.USERID=#{userId}
			</if>
		</where>
	</select>

	<insert id="addRightInfo" parameterType="com.maien.system.manager.right.model.RightInfo">
		insert into
		tbl_manage_right_info(USERID,MENUID) values (#{userId},#{menuId})
	</insert>
		

	<delete id="deleteRightInfo" parameterType="com.maien.system.manager.right.model.RightInfo">
		delete from
		tbl_manage_right_info where USERID=#{userId}
	</delete>
</mapper>